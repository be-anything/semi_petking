<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
<!-- 이 파일 자체를 사용하지 마시구 복사해서 사용해주세요 -->
    <select id="findAll" resultType="board">
        select
            *
        from
            board
        order by
            id
    </select>
    <select id="findById" resultType="boardVo">
        select
            *
        from
            board
        where
            id = #{id}
    </select>
    <insert id="insertBoard">
        insert into
            board (id, board_type, board_title, user_id, board_content)
        values(
            seq_board_id.nextval,
            #{boardType},
            #{boardTitle},
            #{userId},
            #{boardContent}
        )
        <selectKey order="AFTER" resultType="_int" keyProperty="id">
            select
                seq_board_id.nextval
            from
                dual
        </selectKey>
    </insert>
    <update id="updateBoard">
        update
            board
        set
            board_title = #{boardTitle},
            board_content= #{boardContent}
        where
            id = #{id}
    </update>
    <delete id="deleteBoard">
        delete from
            board
        where
            id = #{id}
    </delete>
    <select id="getTotalCount" resultType="_int">
        select
            count(*)
        from
            board
    </select>
    <update id="updateBoardViewCount">
        update
            board
        set
            view_count = view_count + 1
        where
            id = #{id}
    </update>
</mapper>