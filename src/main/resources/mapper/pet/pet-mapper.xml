<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pet">

    <select id="findAllPet" resultType="pet">
        select
            u.id,
            p.*
        from
            users u join pet p
                on u.id = p.user_id
    </select>

    <resultMap id="petVoMap" type="petVo">
        <id column="user_id" property="userId" />
        <id column="pet_name" property="petName" />
        <id column="pet_age" property="petAge" />
        <id column="pet_gender" property="petGender" />
        <id column="neutered" property="neutered" />
        <id column="reg_date" property="regDate" />
    </resultMap>

    <insert id="insertPet">
        insert into
            pet
        values(#{userId}, #{petName}, #{petAge}, #{petGender}, #{neutered}, default)
    </insert>

    <select id="getTotalCount" resultType="_int">
        select
            count(*)
        from
            pet
        <where>
            <if test="userId != null">
                ${userId}
            </if>
        </where>
    </select>


</mapper>